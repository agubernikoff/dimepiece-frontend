{
  "hosting": {
    "public": "build",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      },
      {
        "source": "www.dimepiece.co/*",
        "destination": "https://dimepiece.co/:splat",
        "type": 301
      }
    ]
  }
}
